<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.MainActivity">



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KPU App"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_informasi"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/white"
        android:text="Informasi"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_form_entry"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/white"
        android:text="Form Entry"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:cornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_informasi" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_lihat_data"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/white"
        android:text="Lihat Data"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_form_entry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_keluar"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/white"
        android:text="Keluar"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lihat_data" />

</androidx.constraintlayout.widget.ConstraintLayout>